@model Person

@{
    ViewData["Title"] = "Delete Person";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<p>Are you sure you want to delete @Model.FirstName @Model.LastName (@Model.Email)</p>

<form method="post">
    <a class="btn btn-light" asp-action="Index">No</a>
    <button class="btn btn-warning" type="submit">Yes</button>
</form>